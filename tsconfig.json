{
    "compilerOptions": {
        "types": ["jest", "node"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "target": "esnext",
        "module": "esnext",
        "outDir": "build",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "sourceMap": true,
        "rootDir": "src"
    },
    "include": ["src/**/*", "src/__mocks__", "src/__mocks__", "src/__tests__"],
    "exclude": ["node_modules", "build"]
}

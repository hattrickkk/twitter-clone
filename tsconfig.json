{
    "compilerOptions": {
        "types": ["jest", "node"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "target": "es6",
        "outDir": "build",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "module": "ES2020",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "sourceMap": true,
        "rootDir": "src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
}
